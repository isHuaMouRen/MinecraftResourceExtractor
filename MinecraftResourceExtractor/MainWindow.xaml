<Window x:Class="MinecraftResourceExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftResourceExtractor"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="Minecraft散列资源提取器" Height="450" Width="800"
        ui:WindowHelper.UseModernWindowStyle="True" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Content=".minecraft文件夹"
               VerticalAlignment="Top"
               Width="114"
               Grid.Column="0"
               Margin="0,10,5,0" Height="31" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBox x:Name="textBox_minecraftPath"
                 Text="Unknown"
                 VerticalAlignment="Top"
                 Grid.Column="1"
                 Margin="0,10,0,0"
                 IsReadOnly="True"/>

        <Button x:Name="button_minecraftPath_Broswer"
                Content="浏览"
                VerticalAlignment="Top"
                Width="75"
                Grid.Column="2"
                Margin="5,10,0,0"
                Click="button_minecraftPath_Broswer_Click"/>

        
        <Border BorderBrush="#FF666666"
                BorderThickness="1"
                CornerRadius="5"
                Grid.ColumnSpan="3"
                Margin="0,47,0,0"/>
    </Grid>
</Window>
